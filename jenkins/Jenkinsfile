#!groovy

def provisioner() {
  stage('Infra sync') {
    checkout scm
  }

  stage('Build Environment Space') {
  sh """#!/bin/bash -x
      cf orgs
    """
  }

  stage('Secure Environment Space') {
      sh """#!/bin/bash -x
          cf spaces
        """
  }

}

node('Chef Provisioner Prod') {
  provisioner()
}
