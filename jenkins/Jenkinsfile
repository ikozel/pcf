#!groovy

def provisioner() {
  stage('Checkout') {
    checkout scm
  }

  stage('Build Environment Space') {
    ansiColor('xterm') {
    sh "cf orgs"
    }
  }

  stage('Secure Environment Space') {
    ansiColor('xterm') {
      sh "ls"
      sh """#!/bin/bash
          set -x
          pwd
        """
    }
  }

}

node('Chef Provisioner Prod') {
  provisioner()
}
